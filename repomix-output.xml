                }
            } else {
                console.error("Homepage Map JS (Simple Init + DOM) Error: Map container '#homepage-event-map' not found.");
            }
        }); // <-- Fin DOMContentLoaded
    </script>
    {# --- Fin Script minimal --- #}
{% endblock %}

