            }
    
            .calendar-header {
                display: flex;
                justify-content: space-between;
                align-items: center;
                margin-bottom: 15px;
            }
    
            .nav-arrow {
                background: none;
                border: none;
                color: #6B7280;
                cursor: pointer;
                font-size: 16px;
                transition: color 0.3s ease;
            }
    
            .nav-arrow:hover {
