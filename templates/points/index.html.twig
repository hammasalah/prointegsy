                grid-template-columns: repeat(7, 1fr);
                gap: 5px;
                text-align: center;
            }
    
            .day-header {
                font-size: 12px;
                font-weight: 600;
                color: #6B7280;
                padding: 5px 0;
            }
    
            .day {
