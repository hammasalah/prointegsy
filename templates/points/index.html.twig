            }
    
            .achievement-details span {
                font-size: 12px;
                color: #6B7280;
            }
    
            /* Responsive Adjustments */
            @media (max-width: 768px) {
                .sidebar {
                    width: 200px;
                }
    
                .main-content {
                    margin-left: 200px;
                    width: calc(100% - 200px);
