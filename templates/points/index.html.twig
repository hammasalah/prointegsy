                height: 250px;
            }
    
            /* Calendar Card */
            .calendar-card {
                background: #FFFFFF;
                border-radius: 12px;
                padding: 15px;
                box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
                transition: transform 0.3s ease, box-shadow 0.3s ease, background 0.3s ease;
            }
    
            .calendar-card:hover {
                transform: scale(1.1);
                box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
                background: #F8F8FF;
            }
    
            .calendar-card h3 {
