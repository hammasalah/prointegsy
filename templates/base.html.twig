{# templates/pages/landing.html.twig #}
{% block stylesheets %}
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="{{ asset('css/root.css') }}">
    <style>
        .search-bar {
            padding: 10px;
            width: 300px;
            border-radius: 8px;
            border: 1px solid #ccc;
        }
        #search-result {
            margin-top: 30px;
        }
        .history-table {
            width: 100%;
            border-collapse: collapse;
        }
        .history-table th, .history-table td {
            padding: 10px;
            border: 1px solid #ccc;
            text-align: center;
        }
    </style>
{% endblock %}

{% block body %}
<header class="header">
    <nav class="nav-container">
        <div class="logo">
            <img src="{{ asset('images/logo.svg') }}" alt="Connect Sphere" class="logo-img">
        </div>
        <div class="nav-links">
            <a href="#" class="nav-link">About</a>
            <a href="#" class="nav-link">Events</a>
            <a href="#" class="nav-link">Speakers</a>
            <a href="#" class="nav-link">Tickets</a>
            <a href="#" class="nav-link">Blogs</a>
            <a href="#" class="contact-btn nav-link">Contact</a>
            <i class="fas fa-search"></i>
        </div>
    </nav>
</header>

<main>
    <section class="hero">
        <div class="hero-content">
            <div class="hero-text">
                <p class="event-date" style="color: #F96358; font-weight: 600;">9 June 2023 | Limited Seats</p>
                <h1 class="hero-title">The Ultimate Platform for Planning and Promoting Successful Events</h1>
                <p class="hero-subtitle">Connect Sphere helps you create unforgettable experiences with our comprehensive event management tools.</p>
                <a href="#" class="cta-btn">Buy Tickets</a>
            </div>
            <div class="hero-illustration">
                <img src="{{ asset('images/hero-illustration.png') }}" alt="Hero Illustration">
            </div>
        </div>

        <div class="social-icons">
            <a href="#" class="social-icon"><i class="fab fa-facebook"></i></a>
            <a href="#" class="social-icon"><i class="fab fa-twitter"></i></a>
            <a href="#" class="social-icon"><i class="fab fa-instagram"></i></a>
            <a href="#" class="social-icon"><i class="fab fa-linkedin"></i></a>
        </div>
    </section>

    {# üîç BARRE DE RECHERCHE #}
    <div style="text-align: center; margin-top: 30px;">
        <input type="text" id="search-input" placeholder="Tapez : historique convert" class="search-bar">
    </div>

    {# üìä ZONE R√âSULTAT #}
    <div id="search-result"></div>

    {# üìÅ TEMPLATE CACH√â DU TABLEAU #}
    <div id="conversion-history-template" style="display: none;">
        <h2 style="text-align:center; margin-top: 30px;">Historique de Conversion</h2>
        <table class="history-table">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Devise</th>
                    <th>Points Convertis</th>
                    <th>Montant Re√ßu</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>2025-03-17</td>
                    <td>TND</td>
                    <td>100</td>
                    <td>32.50</td>
                </tr>
            </tbody>
        </table>
    </div>

    <section class="section">
        <h2 class="section-title">WHO WE ARE</h2>
        <p class="section-subtitle">
            We are a leading event management platform dedicated to helping you create exceptional experiences through innovative technology and expert support.
        </p>
        <div class="cards-grid">
            <div class="card">
                <div class="card-icon"><i class="fas fa-globe"></i></div>
                <h3>Global Network</h3>
                <p>Connect with event professionals worldwide</p>
            </div>
            <div class="card">
                <div class="card-icon"><i class="fas fa-tools"></i></div>
                <h3>Advanced Tools</h3>
                <p>Powerful features for event management</p>
            </div>
            <div class="card">
                <div class="card-icon"><i class="fas fa-palette"></i></div>
                <h3>Customizable Pages</h3>
                <p>Create unique event pages easily</p>
            </div>
            <div class="card">
                <div class="card-icon"><i class="fas fa-bullhorn"></i></div>
                <h3>Powerful Marketing</h3>
                <p>Reach your target audience effectively</p>
            </div>
        </div>
    </section>
</main>

<footer class="footer">
    <button class="contact-btn">Contact Us</button>
</footer>
{% endblock %}

{% block javascripts %}
<script>
    document.addEventListener('DOMContentLoaded', () => {
        const input = document.getElementById('search-input');
        const resultDiv = document.getElementById('search-result');
        const template = document.getElementById('conversion-history-template');

        input.addEventListener('input', () => {
            const value = input.value.toLowerCase();
            if (value.includes("historique convert")) {
                resultDiv.innerHTML = template.innerHTML;
            } else {
                resultDiv.innerHTML = "";
            }
        });
    });
</script>
{% endblock %}
