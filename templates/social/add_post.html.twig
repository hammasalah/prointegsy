{% extends 'base.html.twig' %}

{% block title %}Ajouter un Post{% endblock %}

{% block body %}
<div class="container">
    <h1>Ajouter un Post</h1>

    {% for message in app.flashes('error') %}
        <div class="alert alert-danger">{{ message }}</div>
    {% endfor %}

    <form action="{{ path('app_social_add_post') }}" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label for="content">Contenu</label>
            <textarea id="content" name="content" class="form-control" rows="4" required></textarea>
        </div>
        <div class="form-group">
            <label for="image_file">Image (optionnel)</label>
            <input type="file" id="image_file" name="image_file" class="form-control">
        </div>
        <button type="submit" class="btn btn-primary mt-3">Publier</button>
    </form>
</div>
{% endblock %}